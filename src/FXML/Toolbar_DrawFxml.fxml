<javafx.scene.layout.HBox prefHeight="115.0" prefWidth="990.0" spacing="15.0" stylesheets="@../css/main_style.css"
                          xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
                          fx:controller="Controller.Toolbar_DrawController">
    <padding>
        <Insets bottom="5.0" left="30.0" right="30.0" top="20.0"/>
    </padding>
    <styleClass>
        <String fx:value="toolbar_tool_hbox"/>
        <String fx:value="font_size"/>
    </styleClass>
    <children>
        <VBox fx:id="cancel_pen" alignment="CENTER" prefHeight="83.0" prefWidth="67.0" spacing="10.0"
              styleClass="toolbar_sm_button">
            <children>
                <ImageView fitHeight="31.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../pic/cursor.png"/>
                    </image>
                </ImageView>
                <Label text="選取物件"/>
            </children>
        </VBox>
        <VBox alignment="CENTER" prefHeight="92.0" prefWidth="222.0" spacing="5.0">
            <children>
                <HBox fx:id="pen_hbox" prefHeight="85.0" prefWidth="222.0" spacing="10.0"
                      style="-fx-background-color: rgba(255,255,255,0.3);">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
                <Label prefHeight="26.0" prefWidth="56.0" text="繪圖工具"/>
            </children>
        </VBox>
    </children>
</javafx.scene.layout.HBox>
