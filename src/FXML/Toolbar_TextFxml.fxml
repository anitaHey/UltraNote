<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root prefHeight="115.0" prefWidth="990.0" spacing="5.0" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <styleClass>
      <String fx:value="toolbar_tool_hbox" />
      <String fx:value="font_size" />
   </styleClass>
   <children>
      <VBox prefHeight="75.0" prefWidth="300.0" spacing="10.0">
         <children>
            <HBox prefHeight="34.0" prefWidth="300.0" spacing="2.0">
               <children>
                  <ComboBox fx:id="text_font_combo" editable="true" prefHeight="32.0" prefWidth="221.0" styleClass="toolbar_combobox" />
                  <ComboBox fx:id="font_size_combo" editable="true" prefHeight="32.0" prefWidth="78.0" styleClass="toolbar_combobox" />
               </children>
            </HBox>
            <HBox prefHeight="34.0" prefWidth="353.0">
               <children>
                  <Button fx:id="text_bold" mnemonicParsing="false" prefHeight="35.0" prefWidth="35.0" styleClass="toolbar_sm_button" text="B" textAlignment="JUSTIFY">
                     <font>
                        <Font name="Microsoft JhengHei Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="text_italic" mnemonicParsing="false" prefHeight="35.0" prefWidth="35.0" styleClass="toolbar_sm_button" text="I" textAlignment="JUSTIFY">
                     <font>
                        <Font name="Serif Italic" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="text_underline" mnemonicParsing="false" prefHeight="35.0" prefWidth="35.0" styleClass="toolbar_sm_button" text="U" textAlignment="JUSTIFY" underline="true">
                     <font>
                        <Font name="Microsoft JhengHei" size="14.0" />
                     </font>
                  </Button>
                  <VBox fx:id="text_color" alignment="CENTER" fillWidth="false" prefHeight="33.0" prefWidth="34.0" styleClass="toolbar_sm_button">
                     <children>
                        <Label text="A">
                           <font>
                              <Font name="Microsoft JhengHei" size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="-3.0" />
                           </VBox.margin>
                        </Label>
                        <Pane fx:id="text_color_pane" prefHeight="4.0" prefWidth="17.0" />
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
   <stylesheets>
      <URL value="@../css/style.css" />
   </stylesheets>
</fx:root>
